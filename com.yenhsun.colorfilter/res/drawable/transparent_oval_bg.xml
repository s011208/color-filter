<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="@dimen/pager_content_bg_color_strok_width"
                android:color="@color/pager_content_bg_color_shadow" />

            <corners android:radius="10dp" />

            <padding
                android:bottom="3dp"
                android:right="3dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <stroke
                android:width="@dimen/pager_content_bg_color_strok_width"
                android:color="@color/pager_content_bg_color" />

            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="315"
                android:endColor="#60ffffff"
                android:startColor="#00ffffff" />

            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>